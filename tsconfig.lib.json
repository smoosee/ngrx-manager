{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/lib",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "sourceMap": true,
        "types": []
    },
    // prettier-ignore
    "include": [
        "src/**/*.ts"
    ],
    // prettier-ignore
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.stories.ts",
        "src/**/*.cy.ts"
    ],
    "angularCompilerOptions": {
        "compilationMode": "partial"
    }
}
